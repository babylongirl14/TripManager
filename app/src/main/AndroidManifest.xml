<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Agregar este permiso -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TripManager"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- MenÃº principal -->
        <activity
            android:name=".MenuActivity"
            android:exported="false" />

        <!-- Pantalla de login (la inicial) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TripManager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DocumentsActivity" />
        <activity android:name=".AddTripActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".ItineraryActivity" />
        <activity android:name=".AddActivityActivity" />

    </application>
</manifest>
